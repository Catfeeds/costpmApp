<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in_popwindows</item>
        <item name="android:windowExitAnimation">@anim/fade_out_popwindows</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_left_black</item>
    </style>

    <!--绿色-->
    <style name="MyTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="viewPager_bg">@color/dark_white</item>

        <item name="button_bg">@drawable/selector_bg_search</item>
        <item name="layout_bg">@color/colorPrimary</item>
        <item name="text_cl">@color/black</item>
        <item name="text_hint_cl">@color/dark_gray</item>
        <item name="text_bg">@drawable/selector_bg_search</item>

        <item name="pic_voice">@drawable/home_page_voice</item>
        <item name="pic_camera">@drawable/home_page_photo</item>
        <item name="pic_query">@drawable/ic_sousuokuang_white</item>

    </style>

    <!--蓝色-->
    <style name="BlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryLight">@color/colorPrimaryBlueLight</item>
        <item name="viewPager_bg">@color/viewPager_bg_green</item>

        <item name="button_bg">@drawable/selector_blue_button_bg</item>
        <item name="layout_bg">@color/colorPrimaryBlue</item>
        <item name="text_cl">@drawable/selector_txt_color_blue</item>
        <item name="text_hint_cl">@color/dark_gray</item>
        <item name="text_bg">@drawable/selector_bg_search_blue</item>

        <item name="pic_voice">@drawable/home_page_voice_image</item>
        <item name="pic_camera">@drawable/home_page_takephotoimage</item>
        <item name="pic_query">@drawable/ic_sousuokuang</item>

    </style>

    <!--黑色-->
    <style name="BlackTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="colorPrimaryLight">@color/colorPrimaryBlackLight</item>
        <item name="viewPager_bg">@color/viewPager_bg_green</item>

        <item name="button_bg">@drawable/selector_black_button_bg</item>
        <item name="layout_bg">@color/colorPrimaryBlackLight</item>
        <item name="text_cl">@drawable/selector_txt_color_black</item>
        <item name="text_hint_cl">@color/dark_gray</item>
        <item name="text_bg">@drawable/selector_bg_search_black</item>

        <item name="pic_voice">@drawable/home_page_voice_image</item>
        <item name="pic_camera">@drawable/home_page_takephotoimage</item>
        <item name="pic_query">@drawable/ic_sousuokuang</item>

    </style>

</resources>
